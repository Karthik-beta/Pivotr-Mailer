{
    "name": "@pivotr-mailer/api-leads",
    "version": "1.0.0",
    "description": "Lambda function for Lead CRUD operations via API Gateway",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:@aws-sdk/*",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@aws-lambda-powertools/logger": "latest"
    },
    "devDependencies": {
        "@types/aws-lambda": "latest",
        "@types/node": "latest",
        "esbuild": "latest",
        "typescript": "latest"
    }
}