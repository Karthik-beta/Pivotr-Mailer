{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ES2022"],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "/opt/nodejs/src/*": ["../../shared/src/*"]
        }
    },
    "include": ["src/**/*", "../../shared/src/**/*"],
    "exclude": ["node_modules", "dist"]
}
