# Appwrite Configuration
# Copy this file to .env and fill in your values

# =============================================
# APPWRITE CONNECTION
# =============================================

# Appwrite API Endpoint
APPWRITE_ENDPOINT=http://localhost:5000/v1

# Project ID (from Appwrite Console -> Overview)
APPWRITE_PROJECT_ID=your-project-id

# Project Name (for display purposes)
APPWRITE_PROJECT_NAME=Pivotr Mailer

# API Key with full permissions (from Appwrite Console -> API Keys)
# Required for migrations and server-side operations
# NOTE: This is never exposed to the frontend
APPWRITE_API_KEY=your-api-key

# =============================================
# AWS CONFIGURATION (For email sending)
# =============================================

# AWS SES
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=
AWS_SES_REGION=ap-south-1

# AWS SQS (For bounce/complaint handling)
AWS_SQS_QUEUE_URL=
AWS_SQS_REGION=ap-south-1

# =============================================
# THIRD-PARTY SERVICES
# =============================================

# MyEmailVerifier API Key
MY_EMAIL_VERIFIER_API_KEY=

# Unsubscribe Token Secret (min 10 chars)
UNSUBSCRIBE_TOKEN_SECRET=your-secret-here
