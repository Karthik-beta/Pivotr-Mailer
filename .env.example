# AWS Configuration
# Copy this file to .env and fill in your values

# =============================================
# AWS SES (Email Sending)
# =============================================
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=
AWS_SES_REGION=ap-south-1
AWS_SES_CONFIGURATION_SET=PivotrConfigSet
AWS_SES_FROM_EMAIL=

# =============================================
# AWS SQS (Message Queues)
# =============================================
AWS_SQS_QUEUE_URL=
AWS_SQS_REGION=ap-south-1

# =============================================
# AWS CDK DEPLOYMENT
# =============================================
CDK_DEFAULT_ACCOUNT=
CDK_DEFAULT_REGION=ap-south-1

# =============================================
# THIRD-PARTY SERVICES
# =============================================

# MyEmailVerifier API Key
MY_EMAIL_VERIFIER_API_KEY=

# Unsubscribe Token Secret (min 10 chars)
UNSUBSCRIBE_TOKEN_SECRET=your-secret-here
