{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "shared/*"
            ],
            "@functions/*": [
                "functions/*"
            ]
        },
        "types": [
            "bun"
        ]
    },
    "include": [
        "shared/**/*.ts",
        "functions/**/*.ts",
        "migrations/**/*.ts",
        "scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "frontend",
        "dist"
    ],
}